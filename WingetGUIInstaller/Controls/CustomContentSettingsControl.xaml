<UserControl x:Class="WingetGUIInstaller.Controls.CustomContentSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#08FFFFFF" CornerRadius="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="{x:Bind PrimaryText, Mode=OneWay}" TextTrimming="WordEllipsis" />
            <TextBlock Margin="1" FontSize="12"
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                       Text="{x:Bind SecondaryText, Mode=OneWay}"
                       TextTrimming="WordEllipsis" />
        </StackPanel>

        <ContentControl Grid.Column="2" MinWidth="0" Margin="5,5,20,5" HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"
                        Content="{x:Bind CustomContent, Mode=OneWay}" />
    </Grid>
</UserControl>
