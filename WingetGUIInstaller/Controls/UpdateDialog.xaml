<ContentDialog x:Class="WingetGUIInstaller.Controls.UpdateDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls" HorizontalAlignment="Center"
               VerticalAlignment="Center" PrimaryButtonText="Update Now" SecondaryButtonText="Dismiss"
               Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Title>
        <TextBlock Margin="5" Style="{ThemeResource SubtitleTextBlockStyle}">
            <Run Text="New version available:" />
            <Run Text="{x:Bind UpdateVersion, Mode=OneWay}" />
        </TextBlock>
    </ContentDialog.Title>

    <Grid Width="480" MaxHeight="360">
        <toolkit:MarkdownTextBlock Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Transparent"
                                   LinkClicked="MarkdownTextBlock_LinkClicked" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                   Text="{x:Bind UpdateChangeLog, Mode=OneWay}"
                                   TextWrapping="WrapWholeWords" />
    </Grid>
</ContentDialog>
