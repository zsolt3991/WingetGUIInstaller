<UserControl x:Class="WingetGUIInstaller.Controls.StandardButtonSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#08FFFFFF" CornerRadius="5">
            <StackPanel Margin="50,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind PrimaryText, Mode=OneTime}" />
                <TextBlock Margin="1" FontSize="12"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                           Text="{x:Bind SecondaryText, Mode=OneTime}" />
            </StackPanel>
            <Button MinWidth="0" Margin="20,5" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Command="{x:Bind ButtonCommand}"
                    Content="Check for Updates" />
        </Grid>
    </Grid>
</UserControl>
