<Page x:Class="WingetGUIInstaller.Pages.ImportExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:customControls="using:WingetGUIInstaller.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Name="PageTitle"
                       Grid.Row="0" Margin="5" FontSize="24" Text="Import/Export Package List" />

            <controls:HeaderedContentControl Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <controls:HeaderedContentControl.Header>
                    <TextBlock FontSize="20" Text="Import Package List" />
                </controls:HeaderedContentControl.Header>
                <StackPanel Margin="0,10" Orientation="Vertical">
                    <customControls:StandardButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                  ButtonCommand="{x:Bind ViewModel.BrowseImportFileCommand}"
                                                                  ButtonText="Browse" PrimaryText="Browse for package list JSON file"
                                                                  SecondaryText="{x:Bind ViewModel.ImportFileText, Mode=OneWay}" />
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.ImportVersions, Mode=TwoWay}"
                                                                PrimaryText="Ignore Versions"
                                                                SecondaryText="Ignore version specification if present in the packages list and install latest available version" />
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.IgnoreMissing, Mode=TwoWay}"
                                                                PrimaryText="Ignore Unavailable Packages"
                                                                SecondaryText="Ignore packages present in the packages list that are not available anymore" />
                    <Button Margin="0,1" HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.ImportPackageListCommand}"
                            Content="Import Package List"
                            IsEnabled="{x:Bind ViewModel.CanImport, Mode=OneWay}" />
                </StackPanel>
            </controls:HeaderedContentControl>

            <controls:HeaderedContentControl Grid.Row="2" Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <controls:HeaderedContentControl.Header>
                    <TextBlock FontSize="20" Text="Export Package List" />
                </controls:HeaderedContentControl.Header>
                <StackPanel Margin="0,10" Orientation="Vertical">
                    <customControls:StandardButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                  ButtonCommand="{x:Bind ViewModel.BrowseExportFileCommand}"
                                                                  ButtonText="Browse" PrimaryText="Browse for output file"
                                                                  SecondaryText="{x:Bind ViewModel.ExportFileText, Mode=OneWay}" />
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.ExportVersions, Mode=TwoWay}"
                                                                PrimaryText="Include Versions"
                                                                SecondaryText="Include the currently installed package version in the exported list" />
                    <customControls:CustomContentSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                 PrimaryText="Export packages from source"
                                                                 SecondaryText="Export only packages installed from selected package source">
                        <customControls:CustomContentSettingsControl.CustomContent>
                            <ComboBox HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                      ItemsSource="{x:Bind ViewModel.PackageSources, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedSourceName, Mode=TwoWay}" />
                        </customControls:CustomContentSettingsControl.CustomContent>
                    </customControls:CustomContentSettingsControl>
                    <Button Margin="0,1" HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.ExportPackageListCommand}"
                            Content="Export Package List"
                            IsEnabled="{x:Bind ViewModel.CanExport, Mode=OneWay}" />
                </StackPanel>
            </controls:HeaderedContentControl>
        </Grid>

        <customControls:LoadingIndicator Name="LoadingWidget"
                                         Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                         Canvas.ZIndex="99"
                                         IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                         Message="{x:Bind ViewModel.LoadingText, Mode=OneWay}" />
    </Grid>
</Page>
