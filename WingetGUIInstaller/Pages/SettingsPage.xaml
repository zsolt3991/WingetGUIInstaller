<Page x:Class="WingetGUIInstaller.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:customControls="using:WingetGUIInstaller.Controls"
      xmlns:viewmodels="using:WingetGUIInstaller.ViewModels"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Name="PageTitle"
                   Grid.Row="0" Margin="5" FontSize="24" Text="Settings" />

        <StackPanel Grid.Row="1">
            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5" IsExpanded="True">
                <Expander.Header>
                    <TextBlock FontSize="16" Text="General Settings" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.PackageSourceFilteringEnabled, Mode=TwoWay}"
                                                                PrimaryText="Enable Package Source Filtering"
                                                                SecondaryText="Enables Results filtering on Package Sources. Package Sources can be Enabled/Disabled under Package Source Management" />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.IgnoreEmptyPackageSourceEnabled, Mode=TwoWay}"
                                                                PrimaryText="Ignore Packages without explicit Package Source"
                                                                SecondaryText="Packages that do not have a package source will be hidden from results." />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.NotificationsEnabled, Mode=TwoWay}"
                                                                PrimaryText="Enable Notifications" SecondaryText="Enable Windows notifications from the app" />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.ConsoleTabEnabled, Mode=TwoWay}"
                                                                PrimaryText="Show Console output"
                                                                SecondaryText="Enables the ability to view raw command ouput for actions" />
                </StackPanel>
            </Expander>

            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5">
                <Expander.Header>
                    <TextBlock FontSize="16" Text="Application Update" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.AutomaticUpdatesEnabled, Mode=TwoWay}"
                                                                PrimaryText="Automatically check for updates"
                                                                SecondaryText="Enables checking for updates on application startup" />

                    <customControls:StandardButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                  ButtonCommand="{x:Bind ViewModel.CheckForUpdatesCommand}"
                                                                  ButtonText="Check for updates" PrimaryText="Check for updates"
                                                                  SecondaryText="Manually check for updates" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
