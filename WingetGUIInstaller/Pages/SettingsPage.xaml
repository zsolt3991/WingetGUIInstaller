<Page x:Class="WingetGUIInstaller.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:customControls="using:WingetGUIInstaller.Controls"
      xmlns:local="using:WingetGUIInstaller.Pages"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentDialog x:Name="AddPackageSourceDialog"
                       Title="Add Package Source" MinWidth="400"
                       PrimaryButtonCommand="{x:Bind ViewModel.AddPackageSourceCommand}"
                       PrimaryButtonText="Add">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"
                           Text="Name:" />
                <TextBox Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         Text="{x:Bind ViewModel.NewPackageSourceName, Mode=TwoWay}" />
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"
                           Text="URL:" />
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                         Text="{x:Bind ViewModel.NewPackageSourceUrl, Mode=TwoWay}" />
            </Grid>
        </ContentDialog>
        <TextBlock Name="PageTitle"
                   Grid.Row="0" Margin="5" FontSize="24" Text="Settings" />
        <StackPanel Grid.Row="1">
            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5">
                <Expander.Header>
                    <TextBlock FontSize="16" Text="General Settings" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.PackageSourceFilteringEnabled, Mode=TwoWay}"
                                                                PrimaryText="Enable Package Source Filtering"
                                                                SecondaryText="Enables Results filtering on Package Sources. Package Sources can be Enabled/Disabled under Package Source Management" />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.IgnoreEmptyPackageSourceEnabled, Mode=TwoWay}"
                                                                PrimaryText="Ignore Packages without explicit Package Source"
                                                                SecondaryText="Packages that do not have a package source will be hidden from results." />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.NotificationsEnabled, Mode=TwoWay}"
                                                                PrimaryText="Enable Notifications" SecondaryText="Enable Windows notifications from the app" />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.ConsoleTabEnabled, Mode=TwoWay}"
                                                                PrimaryText="Show Console output"
                                                                SecondaryText="Enables the ability to view raw command ouput for actions" />
                </StackPanel>
            </Expander>
            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5">
                <Expander.Header>
                    <TextBlock FontSize="16" Text="Package Source Management" />
                </Expander.Header>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#08FFFFFF" CornerRadius="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="240" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <controls:DataGrid Grid.Row="0" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                       AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False"
                                       GridLinesVisibility="None" IsReadOnly="True"
                                       ItemsSource="{x:Bind ViewModel.PackageSources, Mode=OneWay}"
                                       SelectedItem="{x:Bind ViewModel.SelectedSource, Mode=TwoWay}">
                        <controls:DataGrid.Resources>
                            <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="DataGridCellFocusVisualSecondaryBrush" Color="Transparent" />
                        </controls:DataGrid.Resources>
                        <controls:DataGrid.Columns>
                            <controls:DataGridTemplateColumn Width="32">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox MinWidth="20" Margin="6,0" HorizontalAlignment="Center"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTextColumn Width="2*"
                                                         Binding="{Binding Name}"
                                                         Header="Soruce Name" />
                            <controls:DataGridTextColumn Width="2*"
                                                         Binding="{Binding Url}"
                                                         Header="Source Url" />
                            <controls:DataGridTemplateColumn Width="100" Header="Enabled">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox MinWidth="20" Margin="6,0" HorizontalAlignment="Center"
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <RelativePanel Grid.Row="1" Margin="5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Name="SelectedText"
                                   Margin="5,10,5,10" VerticalAlignment="Stretch" FontSize="16" RelativePanel.AlignLeftWithPanel="True"
                                   Text="{x:Bind ViewModel.SelectedCount, Mode=OneWay}" />
                        <TextBlock Margin="0,10,5,10" VerticalAlignment="Stretch" FontSize="16" RelativePanel.RightOf="SelectedText"
                                   Text="package source(s) selected" />
                        <Button Name="AddSource"
                                Grid.Row="0" MinWidth="160" Margin="5" Click="AddSource_Click" Content="Add Source"
                                FontSize="16" RelativePanel.AlignRightWithPanel="True" />
                        <Button Name="DeleteSelected"
                                Grid.Row="0" MinWidth="160" Margin="5"
                                Command="{x:Bind ViewModel.RemoveSelectedSourcesCommand}"
                                Content="Delete Selected" FontSize="16" RelativePanel.LeftOf="AddSource" />
                    </RelativePanel>
                </Grid>
            </Expander>
            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5">
                <Expander.Header>
                    <TextBlock FontSize="16" Text="Application Update" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.AutomaticUpdatesEnabled, Mode=TwoWay}"
                                                                PrimaryText="Automatically check for updates"
                                                                SecondaryText="Enables checking for updates on application startup" />

                    <customControls:StandardButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                  ButtonCommand="{x:Bind ViewModel.CheckForUpdatesCommand}"
                                                                  PrimaryText="Check for updates" SecondaryText="Manually check for updates" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
