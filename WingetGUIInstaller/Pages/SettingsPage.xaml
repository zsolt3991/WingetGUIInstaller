<Page x:Class="WingetGUIInstaller.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:customControls="using:WingetGUIInstaller.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Name="PageTitle"
                   Grid.Row="0" Margin="5"
                   Style="{ThemeResource TitleTextBlockStyle}"
                   Text="Settings" />

        <StackPanel Grid.Row="1">
            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5" IsExpanded="True">
                <Expander.Header>
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="General Settings" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.NotificationsEnabled, Mode=TwoWay}"
                                                                PrimaryText="Enable Notifications" SecondaryText="Enable Windows notifications from the app" />

                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.AdvancedFunctionalityEnabled, Mode=TwoWay}"
                                                                PrimaryText="Advanced Mode"
                                                                SecondaryText="Enables advanced functionality such as package source management, exclusions, custom commands. Use at your own risk!" />
                    <customControls:CustomContentSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" PrimaryText="Default Page"
                                                                 SecondaryText="Change the page that is shown when the application starts up">
                        <customControls:CustomContentSettingsControl.CustomContent>
                            <ComboBox HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                      ItemsSource="{x:Bind ViewModel.AvailablePages, Mode=OneTime}"
                                      SelectedItem="{x:Bind ViewModel.SelectedPage, Mode=TwoWay}" />
                        </customControls:CustomContentSettingsControl.CustomContent>
                    </customControls:CustomContentSettingsControl>
                    <customControls:CustomContentSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                 PrimaryText="Application Theme"
                                                                 SecondaryText="Change the application theme manually or follow system default">
                        <customControls:CustomContentSettingsControl.CustomContent>
                            <ComboBox HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                      ItemsSource="{x:Bind ViewModel.ApplicationThemes, Mode=OneTime}"
                                      SelectedItem="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}" />
                        </customControls:CustomContentSettingsControl.CustomContent>
                    </customControls:CustomContentSettingsControl>
                </StackPanel>
            </Expander>

            <Expander Margin="5,2" Padding="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Top" Background="Transparent" CornerRadius="5">
                <Expander.Header>
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Application Update" />
                </Expander.Header>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <customControls:ToggleButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                IsOn="{x:Bind ViewModel.AutomaticUpdatesEnabled, Mode=TwoWay}"
                                                                PrimaryText="Automatically check for updates"
                                                                SecondaryText="Enables checking for updates on application startup" />

                    <customControls:StandardButtonSettingsControl Margin="0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                  ButtonCommand="{x:Bind ViewModel.CheckForUpdatesCommand}"
                                                                  ButtonText="Check for updates" PrimaryText="Check for updates"
                                                                  SecondaryText="Manually check for updates" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
